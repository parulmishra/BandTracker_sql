@{
  Layout = "_Layout";
}
<div class="well">
<h2>List of all Venues</h2>
@if(Model.Count == 0)
{
	<h3>There are no venues in the list. Please add a Venue.</h3>
}
  <ul>
  @foreach(var venue in Model)
  {
    <li><a href="/venueDetails/@venue.GetId()">@venue.GetName()</a></li>
  }
</ul>
</div>
<a href="/venueForm"><button type="submit" class="btn btn-info btn-home" name="button">Add</button></a>